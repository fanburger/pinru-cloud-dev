.goods-image-swiper {
  width: 700rpx;
  height: 700rpx;
  padding: 20rpx;
  box-shadow: 2px 10px 12px 0px rgba(0, 0, 0, 0.04);
}

.loading-swiper {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.02);
  width: 90vw;
}

.detail-content {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90vw;
  padding-bottom: 136rpx;
  box-shadow: 2px 0px 12px 0px rgba(0, 0, 0, 0.1);
  border-radius: 24rpx;
  padding-top: 24rpx;
}

.title-card {
  margin-top: 54rpx;
  margin-bottom: 24rpx;
  width: 90vw;
  height: 284rpx;
  border-radius: 24rpx;
  box-shadow: 2px 10px 12px 0px rgba(0, 0, 0, 0.08);
}

.price-title {
  font-size: 40rpx;
  color: #ea4848;
  font-weight: bold;
}

.goods-action {
  position: fixed;
  bottom: 0;
  width: 100vw;
}
