/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.link-text {
  font-size: 24rpx;
  font-weight: normal;
  letter-spacing: 0em;
  color: #576b95;
}

.theme-color {
  background: linear-gradient(97deg, #0dc4b6 0%, rgba(26, 209, 169, 0.74) 100%);
}

.big-button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80vw;
  height: 84rpx;
  border-radius: 200rpx;
}

.opt-text-medium {
  font-size: 28rpx;
  font-weight: bold;
  letter-spacing: 1em;
}

.foot{
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 160rpx;
  width: 80vw;
  position: absolute;
  bottom: 52rpx;
}

.icon-32{
  width: 64rpx;
}

.icon-72{
  width: 72rpx;
}

.icon-88{
  width: 88rpx;
}

.blue-linear-gradient{
  background: linear-gradient(115deg, #30BAF9 3%, rgba(101,191,246,0.72) 95%);
}

.orange-linear-gradient{
  background: linear-gradient(115deg, #FF9E80 5%, rgba(252,184,156,0.75) 96%);
}

.sm-text{
  font-size: 24rpx;
  font-weight: normal;
  color: #303133;
}

.big-white-text{
  color: white;
  font-size: 32rpx;
  letter-spacing: 0.2em;
}


page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
